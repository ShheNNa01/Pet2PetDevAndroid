<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zpback">

    <!-- Profile Header -->
    <ImageButton
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:background="#9B9999"
        android:scaleType="centerCrop"
        android:contentDescription="Foto de perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="\@nombreUsuario"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />

    <!-- Pet Grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/petGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName">

        <!-- First Row -->
        <ImageButton
            android:id="@+id/pet1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_border_coral"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="Mascota Aslan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/pet2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_border_blue"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="Mascota Sky"
            app:layout_constraintStart_toEndOf="@id/pet1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/pet3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_border_coral"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="Mascota Noche"
            app:layout_constraintStart_toEndOf="@id/pet2"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Pet Names -->
        <TextView
            android:id="@+id/Name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aslan"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/pet1"
            app:layout_constraintStart_toStartOf="@id/pet1"
            app:layout_constraintEnd_toEndOf="@id/pet1" />

        <TextView
            android:id="@+id/Name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sky"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/pet2"
            app:layout_constraintStart_toStartOf="@id/pet2"
            app:layout_constraintEnd_toEndOf="@id/pet2" />

        <TextView
            android:id="@+id/Name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noche"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/pet3"
            app:layout_constraintStart_toStartOf="@id/pet3"
            app:layout_constraintEnd_toEndOf="@id/pet3" />

        <!-- Segunda Filas de mascotas creadas :), Se hace mas facil trabajarlo de esta manera pal que sea que se pregunte por que xD -->
        <ImageButton
            android:id="@+id/pet4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle_border_black"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:contentDescription="Mascota Avril"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Name1" />

        <TextView
            android:id="@+id/Name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avril"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/pet4"
            app:layout_constraintStart_toStartOf="@id/pet4"
            app:layout_constraintEnd_toEndOf="@id/pet4" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_border_blue"
            android:src="@drawable/ic_add"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:contentDescription="Agregar mascota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.815"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Name1" />

        <TextView
            android:id="@+id/addPetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Mascota"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/add"
            app:layout_constraintStart_toStartOf="@+id/add"
            app:layout_constraintTop_toBottomOf="@+id/add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón de Cerrar Sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/baloo_tamma_regular"
        android:text="Cerrar sesión"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>